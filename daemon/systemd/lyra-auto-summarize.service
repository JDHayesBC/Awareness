[Unit]
Description=Lyra Automatic Memory Summarization
After=docker.service

[Service]
Type=oneshot
WorkingDirectory=/mnt/c/Users/Jeff/Claude_Projects/Awareness
Environment="PPS_HOST=localhost"
Environment="PPS_PORT=8201"
Environment="SUMMARIZE_THRESHOLD=100"
Environment="SUMMARIZE_BATCH_SIZE=50"
ExecStart=/usr/bin/python3 scripts/auto_summarize.py
StandardOutput=append:/tmp/lyra_auto_summarize.log
StandardError=append:/tmp/lyra_auto_summarize.log

[Install]
WantedBy=default.target
