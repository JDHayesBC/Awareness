[Unit]
Description=Lyra Automatic Graphiti Ingestion
After=docker.service

[Service]
Type=oneshot
WorkingDirectory=/mnt/c/Users/Jeff/Claude_Projects/Awareness
Environment="PPS_HOST=localhost"
Environment="PPS_PORT=8201"
Environment="INGEST_THRESHOLD=100"
Environment="INGEST_BATCH_SIZE=10"
Environment="INGEST_MAX_BATCHES=5"
ExecStart=/usr/bin/python3 scripts/auto_ingest_graphiti.py
StandardOutput=append:/tmp/lyra_auto_ingest_graphiti.log
StandardError=append:/tmp/lyra_auto_ingest_graphiti.log

[Install]
WantedBy=default.target
